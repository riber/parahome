<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--主窗口背景资源-->
    <ImageBrush x:Key="WindowBackgroundImg" ImageSource="/ParadiseHome;component/Images/CN-wp1.jpg" Stretch="Fill" TileMode="None" />
    <!--主窗口样式-->
    <Style x:Key="MainWinStyle" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource ResourceKey=WindowBackgroundImg}" />
        <Setter Property="WindowStyle" Value="ThreeDBorderWindow" />
    </Style>
    <LinearGradientBrush x:Key="ControlBackground" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFE8E6E6" Offset="0" />
        <GradientStop Color="#FFF5BFBF" Offset="1" />
    </LinearGradientBrush>
</ResourceDictionary>